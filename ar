#!/bin/bash
if [ "$1" == "install" ]; then
  python `pwd`/runner/c.install.py
elif [ "$1" == "i18n" ]; then
  python `pwd`/runner/c.i18n.py
elif [ "$1" == "gh" ]; then
  python -m venv /tmp/venv
  PATH="/tmp/venv/bin:/bin:$PATH"
  source /tmp/venv/bin/activate
  pip install -q PyYAML
  python `pwd`/runner/v.gh.py
elif [ "$1" == "container" ]; then
  export PYTHONFAULTHANDLER=1
  export PYTHONUNBUFFERED=1
  shift
  python `pwd`/runner/yrunc.py $*
else
  python `pwd`/runner/yrunv.py $*
fi
